-- Infinite Yield
createButton("Infinite Yield", function()
	local success, result = pcall(function()
		loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
	end)
	if success then
		print("Infinite Yield executed!")
	else
		print("Error executing Infinite Yield:", result)
	end
end)

-- Dark Dex
createButton("Dark Dex", function()
	local success, result = pcall(function()
		loadstring(game:HttpGet("https://raw.githubusercontent.com/infyiff/backup/main/dex.lua"))()
	end)
	if success then
		print("Dark Dex executed!")
	else
		print("Error executing Dark Dex:", result)
	end
end)

-- Teleport Helper
local function teleportTo(pos)
	local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
	local hrp = character:FindFirstChild("HumanoidRootPart")
	if hrp then
		hrp.CFrame = CFrame.new(pos)
	end
end

-- Teleport Buttons
createButton("Teleport to Elevator", function()
	teleportTo(Vector3.new(97, 4, -105))
	print("Teleported to Elevator!")
end)

createButton("Teleport to Employee-Only Room", function()
	teleportTo(Vector3.new(178, 4, -94))
	print("Teleported to Employee-Only Room!")
end)

-- Key ESP
createButton("Key ESP", function()
	print("Activating Key ESP...")

	local Players = game:GetService("Players")
	local LocalPlayer = Players.LocalPlayer
	local Camera = workspace.CurrentCamera

	-- Function to create ESP for a part
	local function createESP(part)
		if not part then return end

		-- SelectionBox to outline the part
		local box = Instance.new("SelectionBox")
		box.Adornee = part
		box.LineThickness = 0.05
		box.SurfaceTransparency = 1
		box.Color3 = Color3.fromRGB(255, 255, 0) -- Yellow
		box.Parent = part

		-- Tracer: Line from camera to the key
		local tracer = Instance.new("Part")
		tracer.Anchored = true
		tracer.CanCollide = false
		tracer.Transparency = 0.5
		tracer.Size = Vector3.new(0.05, 0.05, (part.Position - Camera.CFrame.Position).Magnitude)
		tracer.Color = Color3.fromRGB(255, 255, 0)
		tracer.Material = Enum.Material.Neon
		tracer.Parent = workspace

		local runService = game:GetService("RunService")
		runService.RenderStepped:Connect(function()
			if part and tracer then
				local dir = part.Position - Camera.CFrame.Position
				tracer.CFrame = CFrame.new(Camera.CFrame.Position, part.Position) * CFrame.new(0, 0, -dir.Magnitude / 2)
				tracer.Size = Vector3.new(0.05, 0.05, dir.Magnitude)
			end
		end)

		-- Name tag
		local billboard = Instance.new("BillboardGui")
		billboard.Adornee = part
		billboard.Size = UDim2.new(0, 100, 0, 50)
		billboard.StudsOffset = Vector3.new(0, 2, 0)
		billboard.AlwaysOnTop = true
		billboard.Parent = part

		local textLabel = Instance.new("TextLabel")
		textLabel.Size = UDim2.new(1, 0, 1, 0)
		textLabel.BackgroundTransparency = 1
		textLabel.Text = part.Name
		textLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
		textLabel.TextStrokeTransparency = 0
		textLabel.TextScaled = true
		textLabel.Parent = billboard
	end

	-- Get keys from both folders
	local keysFolders = {workspace:FindFirstChild("CellRoom") and workspace.CellRoom:FindFirstChild("Keys"),
						 workspace:FindFirstChild("CellRoom") and workspace.CellRoom:FindFirstChild("Keys2")}

	for _, folder in ipairs(keysFolders) do
		if folder then
			for _, key in ipairs(folder:GetChildren()) do
				if key:IsA("BasePart") then
					createESP(key)
				end
			end
		end
	end

	print("Key ESP activated!")
end)

-- Full Bright
createButton("Full Bright", function()
	Lighting.Brightness = 5
	Lighting.ClockTime = 14
	Lighting.FogEnd = 100000
	Lighting.GlobalShadows = false
	Lighting.OutdoorAmbient = Color3.new(1, 1, 1)
	print("Full Bright activated!")
end)

-- Shift to Run
createButton("Shift to Run", function()
	print("Shift to Run activated!")

	local Players = game:GetService("Players")
	local UIS = game:GetService("UserInputService")
	local LocalPlayer = Players.LocalPlayer
	local character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
	local humanoid = character:WaitForChild("Humanoid")

	local normalSpeed = 8  -- Normal walking speed
	local runSpeed = 16    -- Speed when holding Shift

	-- Keep track of whether Shift is held
	local shiftHeld = false

	-- Detect key press
	UIS.InputBegan:Connect(function(input, gameProcessed)
		if gameProcessed then return end
		if input.KeyCode == Enum.KeyCode.LeftShift then
			shiftHeld = true
			humanoid.WalkSpeed = runSpeed
		end
	end)

	-- Detect key release
	UIS.InputEnded:Connect(function(input, gameProcessed)
		if gameProcessed then return end
		if input.KeyCode == Enum.KeyCode.LeftShift then
			shiftHeld = false
			humanoid.WalkSpeed = normalSpeed
		end
	end)

	print("Shift to Run is ready! Hold Shift to run.")
end)

createButton("God Mode", function()
	print("Activating God Mode...")

	local Players = game:GetService("Players")
	local ReplicatedStorage = game:GetService("ReplicatedStorage")
	local LocalPlayer = Players.LocalPlayer
	local playerName = LocalPlayer.Name

	-- Dynamically find the player's folder in workspace
	local playerFolder = workspace:FindFirstChild(playerName)

	local pathsToDestroy = {
		playerFolder and playerFolder:FindFirstChild("Health"),
		playerFolder and playerFolder:FindFirstChild("isDead"),
		workspace:FindFirstChild("ShameTeleport"),
		game:GetService("StarterGui"):FindFirstChild("Death"),
		LocalPlayer:FindFirstChild("PlayerGui") and LocalPlayer.PlayerGui:FindFirstChild("Death"),
		ReplicatedStorage:FindFirstChild("Die"),
		ReplicatedStorage:FindFirstChild("Scare"),
		ReplicatedStorage:FindFirstChild("activateDeath"),
		ReplicatedStorage:FindFirstChild("clientPartnerDeath"),
		ReplicatedStorage:FindFirstChild("partnerDie"),
		ReplicatedStorage:FindFirstChild("playerDeath"),
		LocalPlayer:FindFirstChild("Backpack") and LocalPlayer.Backpack:FindFirstChild("DeathShake"),
		game:GetService("StarterPack"):FindFirstChild("DeathShake"),
		LocalPlayer:FindFirstChild("PlayerGui") and LocalPlayer.PlayerGui:FindFirstChild("IntruderScript"),
		game:GetService("StarterGui"):FindFirstChild("IntruderScript")
	}

	for _, obj in ipairs(pathsToDestroy) do
		if obj then
			obj:Destroy()
		end
	end

	-- Set canExecute to false if it exists
	local values = workspace:FindFirstChild("Values")
	if values and values:FindFirstChild("canExecute") then
		values.canExecute.Value = false
	end

	print("God Mode activated! All death/teleport scripts removed and canExecute set to false.")
end)

